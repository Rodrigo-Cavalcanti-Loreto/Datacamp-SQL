--Calculate the revenue coming from movie rentals, the number of movie rentals and the number of customers who rented a movie.


SELECT 
	SUM(renting_price), -- Get the revenue from movie rentals
	COUNT(renting_id), -- Count the number of rentals
	COUNT(customer_id)  -- Count the number of customers
FROM renting AS r
LEFT JOIN movies AS m
ON r.movie_id = m.movie_id;
